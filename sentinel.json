{
  "rules": [
    {
      "name": "линтим ts",
      "mask": ".ts$",
      "separate": true,
      "ignoreErrors": true,
      "commands": [
        "node_modules/.bin/tslint ${filename}"
      ]
    },
    {
      "name": "билдим все",
      "mask": ".*",
      "separate": false,
      "ignoreErrors": true,
      "commands": [
        "npm run build"
      ]
    }
  ]
}